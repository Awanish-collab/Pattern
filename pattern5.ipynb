   "source": [
    "#### Print the following pattern for the given N number of rows.\n",
    "Pattern for N = 3"
   ]
  },
  {
   "cell_type": "raw",
   "metadata": {},
   "source": [
    " A\n",
    " BB\n",
    " CCC"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "4\n",
      "A\n",
      "BB\n",
      "CCC\n",
      "DDDD\n"
     ]
    }
   ],
   "source": [
    "n = int(input())\n",
    "ascii_value = ord('A')\n",
    "for i in range(1,n+1):\n",
    "    a1 = ascii_value  + i - 1\n",
    "    for j in range(1,i+1):\n",
    "        print(chr(a1),end='')\n",
    "    print()"
   ]
